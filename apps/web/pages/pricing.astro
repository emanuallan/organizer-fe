---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button, Card, CardContent, CardDescription, CardHeader, CardTitle } from '@repo/ui';

const title = "Pricing - Organizr";
const description = "Simple pricing for sports facility owners. Run leagues and manage teams with a plan that fits your size.";

const plans = [
  {
    name: "Starter",
    price: "Free",
    period: "to try",
    description: "Perfect for getting started or a single league",
    features: [
      "1 league",
      "Unlimited teams & players",
      "Scheduling & standings",
      "Basic support",
      "All core features"
    ],
    cta: "Get Started",
    href: "/#get-started",
    variant: "default" as const
  },
  {
    name: "Pro",
    price: "TBD",
    period: "per month",
    description: "For facilities running multiple leagues",
    popular: true,
    features: [
      "Unlimited leagues",
      "Payment collection (when available)",
      "Waiver collection (when available)",
      "Priority support",
      "Advanced reporting"
    ],
    cta: "Contact Us",
    href: "mailto:hello@organizr.app?subject=Organizr Pro Plan",
    variant: "default" as const
  },
  {
    name: "Enterprise",
    price: "Custom",
    period: "contact us",
    description: "For multi-location or large organizations",
    features: [
      "Everything in Pro",
      "Multiple facilities",
      "Custom integrations",
      "Dedicated support",
      "SLA options"
    ],
    cta: "Contact Sales",
    href: "mailto:hello@organizr.app?subject=Organizr Enterprise",
    variant: "default" as const
  }
];
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold tracking-tight mb-6">
        Simple, Transparent Pricing
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Start free and scale as you grow. Pricing designed for sports facility
        owners and league operators.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      {plans.map((plan) => (
        <Card className={plan.popular ? "border-primary shadow-lg relative" : ""} client:visible>
          {plan.popular && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="bg-primary text-primary-foreground text-xs font-semibold px-3 py-1 rounded-full">
                MOST POPULAR
              </span>
            </div>
          )}
          <CardHeader>
            <CardTitle className="text-2xl">{plan.name}</CardTitle>
            <CardDescription>{plan.description}</CardDescription>
            <div class="mt-4">
              <span class="text-4xl font-bold">{plan.price}</span>
              <span class="text-muted-foreground ml-2">/{plan.period}</span>
            </div>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3 mb-6">
              {plan.features.map((feature) => (
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <span class="text-sm">{feature}</span>
                </li>
              ))}
            </ul>
            <Button
              variant={plan.variant}
              className="w-full"
              asChild
              client:visible
            >
              <a href={plan.href}>
                {plan.cta}
              </a>
            </Button>
          </CardContent>
        </Card>
      ))}
    </div>

    <!-- FAQ Section -->
    <section class="mb-20" id="faq">
      <h2 class="text-3xl font-bold tracking-tight mb-8 text-center">
        Frequently Asked Questions
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <Card client:visible>
          <CardHeader>
            <CardTitle className="text-lg">Is there really a free plan?</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Yes. The Starter plan lets you run one league with unlimited teams and
              players, full scheduling, and core features so you can try Organizr
              with no commitment.
            </p>
          </CardContent>
        </Card>

        <Card client:visible>
          <CardHeader>
            <CardTitle className="text-lg">When are payments and waivers available?</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Payment collection and digital waiver collection are coming soon and
              will be included in the Pro plan. Contact us if you want early access
              or updates.
            </p>
          </CardContent>
        </Card>

        <Card client:visible>
          <CardHeader>
            <CardTitle className="text-lg">Can I upgrade later?</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Absolutely. Start with the free plan and move to Pro or Enterprise
              when you need more leagues, payments, or support.
            </p>
          </CardContent>
        </Card>

        <Card client:visible>
          <CardHeader>
            <CardTitle className="text-lg">Do you support multiple facilities?</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Yes. The Enterprise plan is built for operators with multiple
              locations. Contact us to discuss your setup and custom needs.
            </p>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="text-center bg-muted/20 rounded-lg p-12">
      <h2 class="text-3xl font-bold tracking-tight mb-4">
        Ready to Run Better Leagues?
      </h2>
      <p class="text-muted-foreground text-lg mb-8 max-w-2xl mx-auto">
        Start with the free plan and upgrade when you're ready for more.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/#get-started"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring h-10 px-8 bg-primary text-primary-foreground shadow hover:bg-primary/90"
        >
          Get Started Free
        </a>
        <a
          href="mailto:hello@organizr.app"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring h-10 px-8 bg-secondary text-secondary-foreground shadow-sm hover:bg-secondary/80"
        >
          Contact Sales
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
