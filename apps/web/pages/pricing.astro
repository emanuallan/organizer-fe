---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button, Card, CardContent, CardDescription, CardHeader, CardTitle } from '@repo/ui';

const title = "Pricing - Organizr";
const description = "Simple pricing for sports facility owners. Run leagues and manage teams with a plan that fits your size.";

const plans = [
  {
    name: "Starter",
    price: "$0",
    period: "forever",
    subline: "1 league",
    description: "Try Organizr with no credit card. One league, full features.",
    features: [
      "1 league",
      "Unlimited teams & players",
      "Scheduling & standings",
      "Email support",
      "All core features"
    ],
    cta: "Get Started Free",
    href: "/#get-started",
    variant: "secondary" as const
  },
  {
    name: "Pro",
    price: "$30",
    period: "month",
    subline: "or $20/mo billed annually",
    foundingBadge: true,
    description: "Unlimited leagues. Built for small orgs, church leagues, and community programs.",
    popular: true,
    features: [
      "Unlimited leagues",
      "Payment collection (when available)",
      "Waiver collection (when available)",
      "Priority email support",
      "Advanced reporting & exports"
    ],
    cta: "Become a Founding Customer",
    href: "/#get-started",
    variant: "default" as const
  },
  {
    name: "Enterprise",
    price: "Custom",
    period: "",
    subline: "Multi-location & scale",
    description: "Multiple facilities, custom needs, and white-glove support.",
    features: [
      "Everything in Pro",
      "Multiple facilities & locations",
      "Custom integrations & API",
      "Dedicated success manager",
      "SLA & training"
    ],
    cta: "Contact Sales",
    href: "mailto:hello@organizr.app?subject=Organizr Enterprise",
    variant: "secondary" as const
  }
];
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold tracking-tight mb-6">
        Simple, Transparent Pricing
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        One price for unlimited leagues. No per-team or per-player fees—built for
        small leagues, church leagues, and community programs.
      </p>
    </div>

    <!-- Founding Customer Offer -->
    <div class="max-w-2xl mx-auto mb-12 p-4 rounded-lg border-2 border-primary/30 bg-primary/5 text-center">
      <p class="text-sm font-semibold text-primary uppercase tracking-wide mb-1">
        Founding Customer Offer — Limited Time
      </p>
      <p class="text-muted-foreground text-sm">
        Lock in <strong class="text-foreground">$30/mo</strong> or <strong class="text-foreground">$20/mo when billed annually</strong> for Pro. Available to the <strong class="text-foreground">first 10 customers</strong> who join us early. You're taking a chance on a startup—we're making it worth it.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      {plans.map((plan) => (
        <Card className={plan.popular ? "border-primary shadow-lg relative" : ""} client:visible>
          {plan.popular && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="bg-primary text-primary-foreground text-xs font-semibold px-3 py-1 rounded-full">
                FOUNDING PRICING
              </span>
            </div>
          )}
          <CardHeader>
            <CardTitle className="text-2xl">{plan.name}</CardTitle>
            <CardDescription>{plan.description}</CardDescription>
            <div class="mt-4">
              <span class="text-4xl font-bold">{plan.price}</span>
              {plan.period && <span class="text-muted-foreground ml-2">/{plan.period}</span>}
            </div>
            {plan.subline && (
              <p class="text-sm text-muted-foreground mt-1">{plan.subline}</p>
            )}
            {plan.foundingBadge && (
              <p class="text-xs text-muted-foreground mt-2">First 10 customers only · limited time</p>
            )}
          </CardHeader>
          <CardContent>
            <ul class="space-y-3 mb-6">
              {plan.features.map((feature) => (
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <span class="text-sm">{feature}</span>
                </li>
              ))}
            </ul>
            <Button
              variant={plan.variant}
              className="w-full"
              asChild
              client:visible
            >
              <a href={plan.href}>
                {plan.cta}
              </a>
            </Button>
          </CardContent>
        </Card>
      ))}
    </div>

    <!-- FAQ Section -->
    <section class="mb-20" id="faq">
      <h2 class="text-3xl font-bold tracking-tight mb-8 text-center">
        Frequently Asked Questions
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <Card client:visible>
          <CardHeader>
            <CardTitle className="text-lg">Is there really a free plan?</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Yes. Starter is free forever—one league, unlimited teams and players,
              full scheduling, and core features. No credit card required to start.
            </p>
          </CardContent>
        </Card>

        <Card client:visible>
          <CardHeader>
            <CardTitle className="text-lg">What's included in Pro?</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Pro is $30/month (or $20/month when billed annually) for our founding
              customers—the first 10 to sign up. You get unlimited leagues, payment
              and waiver collection when available, priority support, and advanced
              reporting. No per-team or per-player fees.
            </p>
          </CardContent>
        </Card>

        <Card client:visible>
          <CardHeader>
            <CardTitle className="text-lg">When are payments and waivers available?</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Payment and digital waiver collection are coming soon and will be
              included in Pro at no extra cost. Contact us if you want early access.
            </p>
          </CardContent>
        </Card>

        <Card client:visible>
          <CardHeader>
            <CardTitle className="text-lg">Can I upgrade or change plans later?</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Yes. Start free, upgrade to Pro when you need more leagues or payments.
              You can switch to annual billing anytime to save. Enterprise is for
              multi-location or custom needs—we'll work with you on pricing.
            </p>
          </CardContent>
        </Card>

        <Card client:visible>
          <CardHeader>
            <CardTitle className="text-lg">Do you support multiple facilities?</CardTitle>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Yes. Enterprise is built for operators with multiple locations, custom
              integrations, and dedicated support. Contact sales for a quote.
            </p>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="text-center bg-muted/20 rounded-lg p-12">
      <h2 class="text-3xl font-bold tracking-tight mb-4">
        Ready to Run Better Leagues?
      </h2>
      <p class="text-muted-foreground text-lg mb-8 max-w-2xl mx-auto">
        Start free, or lock in founding pricing ($30/mo or $20/mo annually) while
        the first 10 spots are open.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/#get-started"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring h-10 px-8 bg-primary text-primary-foreground shadow hover:bg-primary/90"
        >
          Get Started Free
        </a>
        <a
          href="mailto:hello@organizr.app"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring h-10 px-8 bg-secondary text-secondary-foreground shadow-sm hover:bg-secondary/80"
        >
          Contact Sales
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
