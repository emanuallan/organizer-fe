---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@repo/ui';

const features = [
  {
    title: "League & Team Management",
    description: "Create leagues, divisions, and teams in minutes",
    content: "Set up seasons, roster caps, and divisions. Drag-and-drop team builder and bulk imports so you spend less time on admin and more on the game."
  },
  {
    title: "Player Management",
    description: "Rosters, waivers, and contact info in one place",
    content: "Register players, track waivers (coming soon), and keep contact details organized. Export rosters and share with coaches and staff."
  },
  {
    title: "Easy Scheduling",
    description: "Build schedules that work for your facility",
    content: "Generate balanced schedules, avoid conflicts, and publish to teams. Support for round-robin, brackets, and custom formats."
  },
  {
    title: "Payment Collection",
    description: "Collect fees and league dues online (coming soon)",
    content: "Accept registration fees and league payments securely. Reduce no-shows and chase fewer checks—everything in one dashboard."
  },
  {
    title: "Waiver Collection",
    description: "Digital waivers and compliance (coming soon)",
    content: "Send and collect waivers electronically. Stay compliant and keep signed waivers on file without paper or chasing parents."
  },
  {
    title: "Built for Facilities",
    description: "Designed for courts, rinks, and fields",
    content: "Whether you run youth leagues, adult rec, or tournaments—Organizr scales from a single league to multiple sports and locations."
  }
];
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-background to-muted/20">
    <div class="container mx-auto text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
        Run Your Leagues. Manage Your Facility.
      </h1>
      <p class="text-xl text-muted-foreground mb-8 max-w-3xl mx-auto">
        Organizr makes creating and running sports leagues easy. Player, league, and team
        management, scheduling, and more—built for sports facility owners who want to
        spend less time on spreadsheets and more time on the game.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center" id="get-started">
        <a
          href="/#features"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring h-10 px-8 bg-primary text-primary-foreground shadow hover:bg-primary/90"
        >
          See Features
        </a>
        <a
          href="/pricing"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring h-10 px-8 bg-secondary text-secondary-foreground shadow-sm hover:bg-secondary/80"
        >
          View Pricing
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8" id="features">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold tracking-tight mb-4">
          Everything you need to run great leagues
        </h2>
        <p class="text-muted-foreground text-lg max-w-2xl mx-auto">
          From registration to schedules to (soon) payments and waivers—Organizr gives
          facility owners one place to manage it all.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <Card client:visible>
            <CardHeader>
              <CardTitle>{feature.title}</CardTitle>
              <CardDescription>{feature.description}</CardDescription>
            </CardHeader>
            <CardContent>
              <p class="text-sm text-muted-foreground">{feature.content}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Who it's for -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-muted/20">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold tracking-tight mb-4">
        Built for Sports Facility Owners
      </h2>
      <p class="text-muted-foreground text-lg mb-12 max-w-2xl mx-auto">
        Recreation centers, rinks, courts, and leagues—if you run sports programs,
        Organizr helps you stay organized and save time.
      </p>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-3xl mx-auto">
        {["Youth leagues", "Adult rec", "Tournaments", "Multi-sport"].map((item) => (
          <div class="p-4 rounded-lg bg-background border">
            <span class="font-medium">{item}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold tracking-tight mb-4">
        Ready to simplify your leagues?
      </h2>
      <p class="text-muted-foreground text-lg mb-8 max-w-2xl mx-auto">
        See pricing and start running your facility with less hassle.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/pricing"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring h-10 px-8 bg-primary text-primary-foreground shadow hover:bg-primary/90"
        >
          View Pricing
        </a>
        <a
          href="/features"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring h-10 px-8 bg-secondary text-secondary-foreground shadow-sm hover:bg-secondary/80"
        >
          Explore Features
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
