---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@repo/ui';

const title = "Features - Organizr";
const description = "Explore everything Organizr offers for sports league and facility management‚Äîleagues, teams, players, scheduling, and more.";

const featureCategories = [
  {
    title: "League & Team Management",
    icon: "üèÜ",
    features: [
      {
        title: "Leagues & Seasons",
        description: "Create leagues and seasons with custom names, dates, and divisions. Support multiple leagues per facility."
      },
      {
        title: "Teams & Rosters",
        description: "Build teams with roster caps and roles. Drag-and-drop or bulk import players."
      },
      {
        title: "Divisions & Brackets",
        description: "Organize teams into divisions. Set up brackets for playoffs and tournaments."
      },
      {
        title: "Multi-Sport Support",
        description: "Run basketball, hockey, soccer, volleyball, and more from one account."
      }
    ]
  },
  {
    title: "Player Management",
    icon: "üë§",
    features: [
      {
        title: "Player Registry",
        description: "Central list of players with contact info, notes, and history across leagues."
      },
      {
        title: "Roster Management",
        description: "Add and remove players from teams. Track availability and status."
      },
      {
        title: "Bulk Import & Export",
        description: "Import rosters from CSV or spreadsheets. Export for coaches and staff."
      },
      {
        title: "Waiver Collection (Coming Soon)",
        description: "Send and collect digital waivers. Keep signed waivers on file for compliance."
      }
    ]
  },
  {
    title: "Scheduling",
    icon: "üìÖ",
    features: [
      {
        title: "Easy Schedule Builder",
        description: "Create balanced schedules for round-robin, brackets, or custom formats."
      },
      {
        title: "Conflict Avoidance",
        description: "Respect facility availability, ref assignments, and team constraints."
      },
      {
        title: "Publish & Share",
        description: "Publish schedules and share with teams. Updates sync in one place."
      },
      {
        title: "Games & Standings",
        description: "Enter scores, track standings, and manage playoff seeding."
      }
    ]
  },
  {
    title: "Payments & Operations",
    icon: "üí≥",
    features: [
      {
        title: "Payment Collection (Coming Soon)",
        description: "Accept registration fees and league dues online. Reduce no-shows and late payments."
      },
      {
        title: "Registration Workflows",
        description: "Manage sign-ups, waitlists, and roster confirmations in one flow."
      },
      {
        title: "Facility-Centric",
        description: "Organize by location and facility. Scale from one court to multiple venues."
      },
      {
        title: "Dashboard & Reports",
        description: "See league health, roster counts, and key metrics at a glance."
      }
    ]
  },
  {
    title: "For Facility Owners",
    icon: "üèüÔ∏è",
    features: [
      {
        title: "Save Time on Admin",
        description: "Less spreadsheets and email chains. One place for leagues, teams, and schedules."
      },
      {
        title: "Professional Experience",
        description: "Give coaches and players a clear, organized experience from sign-up to finals."
      },
      {
        title: "Grow Your Programs",
        description: "Add more leagues and sports without outgrowing your tools."
      },
      {
        title: "Support When You Need It",
        description: "Built for real facilities. We listen to operators and improve based on feedback."
      }
    ]
  }
];
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold tracking-tight mb-6">
        Features Built for League Operators
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Everything you need to create and run sports leagues‚Äîplayer and team management,
        scheduling, and (coming soon) payments and waivers‚Äîin one place.
      </p>
    </div>

    <!-- Feature Categories -->
    {featureCategories.map((category) => (
      <section class="mb-20">
        <div class="flex items-center mb-8">
          <span class="text-4xl mr-4">{category.icon}</span>
          <h2 class="text-3xl font-bold tracking-tight">{category.title}</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {category.features.map((feature) => (
            <Card client:visible>
              <CardHeader>
                <CardTitle className="text-lg">{feature.title}</CardTitle>
                <CardDescription>{feature.description}</CardDescription>
              </CardHeader>
            </Card>
          ))}
        </div>
      </section>
    ))}

    <!-- CTA Section -->
    <section class="text-center">
      <h2 class="text-3xl font-bold tracking-tight mb-4">
        Ready to run your leagues with less hassle?
      </h2>
      <p class="text-muted-foreground text-lg mb-8 max-w-2xl mx-auto">
        See pricing and get started with Organizr.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/pricing"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-10 px-4 py-2"
        >
          View Pricing
        </a>
        <a
          href="/about"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring h-10 px-4 py-2 bg-secondary text-secondary-foreground shadow-sm hover:bg-secondary/80"
        >
          About Organizr
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
